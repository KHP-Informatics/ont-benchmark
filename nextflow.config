// Parameters
params {
    // Reference files
    reference_fasta = '/scratch/prj/ppn_als_longread/references/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna'
    array_positions_file = '/scratch/prj/ppn_als_longread/references/InfiniumOmni2-5-8v1-4_A1_b150_rsids.txt'
    low_complexity_regions = 'ftp://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/genome-stratifications/v3.4/GRCh38@all/LowComplexity/GRCh38_notinAllTandemRepeatsandHomopolymers_slop5.bed.gz'

    // Sample ID files
    sample_ids_file = '/scratch/prj/ppn_als_longread/sample_ids.csv'

    // Directories
    microarray_dir = '/scratch/prj/ppn_als_longread/benchmark_data/genotyping'
    illumina_dir = '/scratch/prj/ppn_als_longread/benchmark_data/illumina/grch38'
    ont_dir = '/scratch/prj/ppn_als_longread/vcf'
    variant_benchmark_dir = '/scratch/prj/ppn_als_longread/variant_benchmark/snps_ont_vs_microarray'
    outdir = 'output'

    // Run parameters
    basecall = 'sup'
}

// General workflow settings
workDir = '/scratch/prj/ppn_als_longread/work'
resume = true
cleanup = false

// Container settings
docker {
    enabled = false
}

singularity {
    enabled = true
    autoMounts = true
    cacheDir = "/scratch/users/${USER}/singularity/"
}

executor {
    name = 'slurm'
}

// Process settings
process {
    queue = 'cpu,nd_bioinformatics_cpu,interruptible_cpu'

    withName: SPLIT_SNV_INDELS {
        container = 'quay.io/biocontainers/bcftools:1.20--h8b25389_0'
        cpus = 1
        memory = '2 GB'
        time = { 10.min * task.attempt }
    }

    withName: COLLECT_UNIQUE_MICROARRAY_VARIANT_IDS {
        container = 'quay.io/biocontainers/pysam:0.22.1--py312hcfdcdd7_1'
        cpus = 1
        memory = '2 GB'
        time = { 1.h * task.attempt }
    }

    withName: CONVERT_TO_RSIDS {
        container = 'python:3.12.4-slim'
        cpus = 1
        memory = '2 GB'
        time = { 5.min * task.attempt }
    }

    withName: QUERY_RSID_POSITIONS {
        container = 'quay.io/biocontainers/biopython:1.81'
        docker.runOptions = '--tmpfs /tmp:size=1G'
        singularity.runOptions = '--writable-tmpfs'

        cpus = 16
        memory = '32 GB'
        time = { 4.h * task.attempt }
    }

    withName: UPDATE_MICROARRAY_VCF {
        container = 'quay.io/biocontainers/pysam:0.22.1--py312hcfdcdd7_1'
        cpus = 1
        memory = '2 GB'
        time = { 15.min * task.attempt }
    }

    withName: SORT_VCF {
        container = 'quay.io/biocontainers/bcftools:1.20--h8b25389_0'
        cpus = 1
        memory = '4 GB'
        time = { 10.min * task.attempt }
    }

    withName: GENERATE_SDF_REFERENCE {
        container = 'quay.io/biocontainers/rtg-tools:3.12.1--hdfd78af_0'
        cpus = 1
        memory = '2 GB'
        time = { 10.min * task.attempt }
    }

    withName: FILTER_SNV_VCF {
        container = 'quay.io/biocontainers/bcftools:1.20--h8b25389_0'
        cpus = 2
        memory = '8 GB'
        time = { 15.min * task.attempt }
    }

    withName: RTG_VCFEVAL {
        container = 'quay.io/biocontainers/rtg-tools:3.12.1--hdfd78af_0'
        cpus = 1
        memory = '2 GB'
        time = { 15.min * task.attempt }
    }

    withName: RTG_ROCPLOT {
        container = 'quay.io/biocontainers/rtg-tools:3.12.1--hdfd78af_0'
        cpus = 1
        memory = '2 GB'
        time = { 15.min * task.attempt }
    }
}
